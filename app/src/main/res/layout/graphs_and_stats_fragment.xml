<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/graphStatList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/graph_stat_view"/>

        <ProgressBar
                android:id="@+id/graphStatsProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        <TextView
            android:id="@+id/noGraphsHintText"
            style="@style/Style.EmptyPageHintTextStyle"
            android:layout_gravity="center"
            tools:text="some hint text to tell you what to do next"
            />

    </FrameLayout>

</layout>
